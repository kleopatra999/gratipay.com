{% extends "templates/profile.html" %}

{% block head %}
    <link rel="payment" type="text/html" title="Give weekly gift on Gratipay"
        href="https://gratipay.com/{{ participant.username }}/" />
    <meta name="twitter:card" content="summary" />
    <meta name="og:url" content="https://gratipay.com/{{ participant.username }}/" />
    <meta name="og:type" content="profile" />
    <meta name="og:title" content="{{ participant.get_og_title() }}" />
    {% if statement %}
    <meta name="og:description" content="{{ truncate(statement) }}" />
    {% else %}
    <meta name="og:description" content="Gratipay is a weekly gift exchange" />
    {% endif %}
    {% if participant.avatar_url %}
    <meta name="og:image" content="{{ participant.avatar_url }}" />
    {% endif %}
    <meta name="og:image" content="{{ website.asset('gratipay.opengraph.png') }}" />
{% endblock %}

{% block content %}
{% set unprivileged = not(participant == user.participant or user.ADMIN) %}
{% set approved_open_teams = participant.get_teams(unprivileged, unprivileged) %}
{% set project_list = approved_open_teams %}

{% if user.participant == participant %}
    <div id="profile-edit">
        {% include "templates/profile-edit.html" %}
        <div class="projects">
            <h2>{{ _("Projects") }}</h2>
            <form action="/apply" class="apply-button">
                <button type="submit">{{ _("Fund Your Project") }}</button>
            </form>
            <table class="listing">
                {% include "templates/project-listing.html" %}
            </table>
        </div>
    </div>
    {% include "templates/connected-accounts.html" %}
{% else %}
    {% if statement %}
    <div class="statement profile-statement">
        {{ markdown.render(statement) }}
    </div>
    {% endif %}

    {% if user.ADMIN or approved_open_teams %}
        <h2>{{ _("Projects") }}</h2>
    {% endif %}
    <table class="listing">
        {% include "templates/project-listing.html" %}
    </table>

    {% include "templates/connected-accounts.html" %}
{% endif %}
{% endblock %}

{% block scripts %}
{% if user.participant == participant %}
<script>$(document).ready(Gratipay.profile.init);</script>
{% endif %}
{{ super() }}
{% endblock %}
